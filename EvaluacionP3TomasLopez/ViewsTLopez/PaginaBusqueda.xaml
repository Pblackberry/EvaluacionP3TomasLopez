<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluacionP3TomasLopez.ViewsTLopez.PaginaBusqueda"
             Title="Pagina Busqueda Tomas Lopez">
    <VerticalStackLayout>
        <Entry x:Name="PaisFront" Placeholder="Ingrese el pais" HorizontalOptions="Center"/>
        <HorizontalStackLayout HorizontalOptions="Center" Padding="10" Spacing="10">
            <Button Text="Buscar" Clicked="Button_Clicked" HorizontalOptions="Center" WidthRequest="200"/>
            <Button Text="Limpiar" Clicked="Button_Clicked_1" HorizontalOptions="Center" WidthRequest="200"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Padding="10" Spacing="10">
            <Label Text="Nombre del pais: "/>
            <Label Text="{Binding Name}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Padding="10" Spacing="10">
            <Label Text="Region del pais: "/>
            <Label Text="{Binding Region}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Padding="10" Spacing="10">
            <Label Text="Link de GoogleMaps: "/>
            <Label Text="{Binding Maps}"/>
        </HorizontalStackLayout>
        
        
    </VerticalStackLayout>
</ContentPage>