<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluacionP3TomasLopez.ViewsTLopez.PaginaPaisesLista"
             Title="Pagina Paises Lista Tomas Lopez">
    <ScrollView>
        <VerticalStackLayout>
            <ListView x:Name="PaisesListviewTL"
              ItemsSource="{Binding Paises}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" Padding="10">
                                <Label Text="{Binding Name}" FontSize="24"/>
                                <Label Text="{Binding Region}" FontSize="18" TextColor="Gray"/>
                                <Label Text="{Binding Maps}" FontSize="14" TextColor="Blue"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>